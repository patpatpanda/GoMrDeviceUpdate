<UserControl x:Class="GoMrDevice.MVVM.Controls.DeviceListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:GoMrDevice.MVVM.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DeviceListViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid>
        <ListView ItemsSource="{Binding DeviceTwinList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Device ID" DisplayMemberBinding="{Binding DeviceId}" Width="150" />
                    <!-- Add more columns as needed -->
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
